{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apiVersion": {
      "type": "string"
    },
    "txNode": {
      "type": "int"
    },
    "mnNode": {
      "type": "int"
    },
    "etherbaseAddress": {
      "type" : "string"
    },
    "genesisNodeId": {
      "type": "string"
    },
    "genesisIpAddress": {
      "type": "string"
    },
    "genesisPort": {
      "type": "string"
    },
    "txVMNamePrefix": {
      "type": "string"
    },
    "numTXNodes": {
      "type": "int"
    },
    "mnVMNamePrefix": {
      "type": "string"
    },
    "numMNNodes": {
      "type": "int"
    },
    "artifactsLocationURL": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "ethereumAccountPsswd": {
      "type": "securestring"
    },
    "ethereumNetworkID": {
      "type": "int"
    },
    "maxPeers": {
      "type": "int"
    },
    "privateKeyForPrefundedAccount": {
      "type": "string"
    }
  },
  "variables": {
    "enodeUrl" : "[concat('enode://', parameters('genesisNodeId'), '@', parameters('genesisIpAddress'), ':', parameters('genesisPort'))]"
  },
  "resources": [
    {
      "apiVersion": "[parameters('apiVersion')]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('txVMNamePrefix'), copyIndex(), '/newuserscript')]",
      "copy": {
        "name": "txNodesConfigLoop",
        "count": "[parameters('numTXNodes')]"
      },
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[concat(parameters('artifactsLocationURL'), '/scripts/configure-geth.sh')]"
          ]
        },
        "protectedSettings": {
          "commandToExecute": "[concat('sh configure-geth.sh ', parameters('adminUsername'), ' ', parameters('ethereumAccountPsswd'), ' ', parameters('privateKeyForPrefundedAccount'), ' ', parameters('artifactsLocationURL'), ' ', parameters('ethereumNetworkID'), ' ', parameters('maxPeers'), ' ', parameters('txNode'), ' ', variables('enodeUrl'), ' ', parameters('numMNNodes'), ' ', parameters('mnVMNamePrefix'), ' ', parameters('numTXNodes'), ' ', parameters('txVMNamePrefix'), ' ', concat('txNodesConfigLoop-', copyIndex()))]"
        }
      }
    },
    {
      "apiVersion": "[parameters('apiVersion')]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('mnVMNamePrefix'), copyIndex(),'/newuserscript')]",
      "copy": {
        "name": "regularMNNodesConfigLoop",
        "count": "[parameters('numMNNodes')]"
      },
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[concat(parameters('artifactsLocationURL'), '/scripts/configure-geth.sh')]"
          ]
        },
        "protectedSettings": {
          "commandToExecute": "[concat('sh configure-geth.sh ', parameters('adminUsername'), ' ', parameters('ethereumAccountPsswd'), ' ', parameters('privateKeyForPrefundedAccount'), ' ', parameters('artifactsLocationURL'), ' ', parameters('ethereumNetworkID'), ' ', parameters('maxPeers'), ' ', parameters('mnNode'), ' ', variables('enodeUrl'), ' ' , parameters('numMNNodes'), ' ', parameters('etherbaseAddress'), ' ', concat('regularMNNodesConfigLoop-', copyIndex()))]"
        }
      }
    }
  ]
}