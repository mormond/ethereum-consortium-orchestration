{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "location of resources"
      }
    },
    "namingInfix": {
      "type": "string"
    }
  },
  "variables": {
    "deploymentId": "[toLower(substring(uniqueString(resourceGroup().Id), 0, 10))]",
    "apiVersion": "2015-06-15",
    "resourceLocation": "[parameters('location')]",
    "addressPrefix": "10.0.0.0/16",
    "namingInfix": "[parameters('namingInfix')]",
    "subnetMiner": {
      "name": "subnet-miners",
      "nsg": "[concat(variables('namingInfix'), '-nsg-miners')]",
      "prefix": "10.0.0.0/24"
    },
    "subnetTxNode": {
      "name": "subnet-txnodes",
      "nsg": "[concat(variables('namingInfix'), '-nsg-txnodes')]",
      "prefix": "10.0.1.0/24"
    },
    "subnetDashboard": {
      "name": "subnet-dashboard",
      "nsg": "[concat(variables('namingInfix'), '-nsg-dashboard')]",
      "prefix": "10.0.2.0/24"
    },
    "virtualNetworkName": "[concat(variables('namingInfix'), '-vnet')]",
    "publicIPAddressDash": "[concat(variables('namingInfix'), '-public-ip-dash')]",
    "publicIPDashName": "[concat(variables('deploymentId'), '-dash-', variables('namingInfix'))]",
    "loadBalancerName": "[concat(variables('namingInfix'), '-lb-dash')]",
    "internalLoadBalancerName": "[concat(variables('namingInfix'), '-lb-tx')]",
    "natPoolName": "[concat('natpool-', variables('namingInfix'))]",
    "loadBalancedNodePool": "[concat('bepool-', variables('namingInfix'))]",
    "dashboardNodePool": "[concat('db-', variables('namingInfix'))]",
    "natStartPort": 50000,
    "natEndPort": 50119,
    "natBackendPortLinux": 22,
    "nodeProbeName": "Node-Probe",
    "publicLoadBalancerId": "[resourceId('Microsoft.Network/loadBalancers',variables('loadBalancerName'))]",
    "publicLoadBalancer": {
      "id": "[variables('publicLoadBalancerId')]",
      "backendProbeId": "[concat(variables('publicLoadBalancerId'), '/probes/', variables('nodeProbeName'))]",
      "backendPoolId": "[concat(variables('publicLoadBalancerId'), '/backendAddressPools/', variables('loadBalancedNodePool'))]",
      "dashboardProbeId": "[concat(variables('publicLoadBalancerId'), '/probes/', variables('nodeProbeName'))]",
      "dashboardPoolId": "[concat(variables('publicLoadBalancerId'), '/backendAddressPools/', variables('dashboardNodePool'))]",
      "frontendIPConfigId": "[concat(variables('publicLoadBalancerId'), '/frontendIPConfigurations/LoadBalancerFrontEnd')]",
      "internalIPConfigId": "[concat(variables('publicLoadBalancerId'), '/frontendIPConfigurations/LoadBalancerInternal')]",
      "natPoolId": "[concat(variables('publicLoadBalancerId'), '/inboundNatPools/', variables('natPoolName'))]"
    },
    "internalLoadBalancerId": "[resourceId('Microsoft.Network/loadBalancers',variables('internalLoadBalancerName'))]",
    "internalLoadBalancer": {
      "id": "[variables('internalLoadBalancerId')]",
      "backendProbeId": "[concat(variables('internalLoadBalancerId'), '/probes/', variables('nodeProbeName'))]",
      "backendPoolId": "[concat(variables('internalLoadBalancerId'), '/backendAddressPools/', variables('loadBalancedNodePool'))]",
      "dashboardProbeId": "[concat(variables('internalLoadBalancerId'), '/probes/', variables('nodeProbeName'))]",
      "dashboardPoolId": "[concat(variables('internalLoadBalancerId'), '/backendAddressPools/', variables('dashboardNodePool'))]",
      "frontendIPConfigId": "[concat(variables('internalLoadBalancerId'), '/frontendIPConfigurations/LoadBalancerFrontEnd')]",
      "internalIPConfigId": "[concat(variables('internalLoadBalancerId'), '/frontendIPConfigurations/LoadBalancerInternal')]",
      "natPoolId": "[concat(variables('internalLoadBalancerId'), '/inboundNatPools/', variables('natPoolName'))]"
    },
    "subnetTxNodeId": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName')), '/subnets/', variables('subnetTxNode').name)]",
    "subnetMinerNodeId": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName')), '/subnets/', variables('subnetMiner').name)]",
    "subnetDashboardId": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName')), '/subnets/', variables('subnetDashboard').name)]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('subnetMiner').nsg]",
      "apiVersion": "2016-03-30",
      "location": "[variables('resourceLocation')]",
      "properties": {
        "securityRules": [
          {
            "name": "allow-ssh",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "VirtualNetwork",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          },
          {
            "name": "block-bootnodes",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "30303",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "Internet",
              "access": "Deny",
              "priority": 101,
              "direction": "Outbound"
            }
          },
          {
            "name": "allow-bootnodes",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "30303",
              "sourceAddressPrefix": "VirtualNetwork",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 102,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('subnetDashboard').nsg]",
      "apiVersion": "2016-03-30",
      "location": "[variables('resourceLocation')]",
      "properties": {
        "securityRules": [
          {
            "name": "allow-ssh",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-dashboard",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "3000",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 101,
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-registrar",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "3001",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 102,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('subnetTxNode').nsg]",
      "apiVersion": "2016-03-30",
      "location": "[variables('resourceLocation')]",
      "properties": {
        "securityRules": [
          {
            "name": "allow-ssh",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-geth-rpc",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "8545",
              "sourceAddressPrefix": "VirtualNetwork",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 102,
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-bootnodes",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "30303",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 103,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('virtualNetworkName')]",
      "apiVersion": "[variables('apiVersion')]",
      "location": "[variables('resourceLocation')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('addressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('subnetMiner').name]",
            "properties": {
              "addressPrefix": "[variables('subnetMiner').prefix]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('subnetMiner').nsg)]"
              }
            }
          },
          {
            "name": "[variables('subnetTxNode').name]",
            "properties": {
              "addressPrefix": "[variables('subnetTxNode').prefix]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('subnetTxNode').nsg)]"
              }
            }
          },
          {
            "name": "[variables('subnetDashboard').name]",
            "properties": {
              "addressPrefix": "[variables('subnetDashboard').prefix]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('subnetDashboard').nsg)]"
              }
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('subnetMiner').nsg)]",
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('subnetTxNode').nsg)]",
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('subnetDashboard').nsg)]"
      ]
    },
    {
      "type": "Microsoft.Network/loadBalancers",
      "name": "[variables('internalLoadBalancerName')]",
      "apiVersion": "[variables('apiVersion')]",
      "location": "[variables('resourceLocation')]",
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "LoadBalancerInternal",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('subnetTxNodeId')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[variables('loadBalancedNodePool')]"
          }
        ],
        "loadBalancingRules": [
          {
            "name": "BootnodeSharing",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('internalLoadBalancer').internalIPConfigId]"
              },
              "frontendPort": 80,
              "backendPort": 3001,
              "enableFloatingIP": false,
              "idleTimeoutInMinutes": 4,
              "protocol": "Tcp",
              "loadDistribution": "Default",
              "backendAddressPool": {
                "id": "[variables('internalLoadBalancer').backendPoolId]"
              },
              "probe": {
                "id": "[variables('internalLoadBalancer').backendProbeId]"
              }
            }
          }
        ],
        "probes": [
          {
            "name": "[variables('nodeProbeName')]",
            "properties": {
              "protocol": "Tcp",
              "port": 22,
              "intervalInSeconds": 5,
              "numberOfProbes": 2
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]"
      ]
    }
  ],
  "outputs": {
    "Network": {
      "type": "object",
      "value": {
        "name": "[variables('virtualNetworkName')]",
        "id": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
        "internal": {
          "ip": "[reference(variables('internalLoadBalancerId')).frontendIPConfigurations[0].properties.privateIPAddress]",
          "id": "[variables('internalLoadBalancerId')]",
          "poolId": "[variables('internalLoadBalancer').backendPoolId]",
          "natPoolId": "[variables('internalLoadBalancer').natPoolId]"
        },
        "subnets": {
          "tx": "[variables('subnetTxNodeId')]",
          "miners": "[variables('subnetMinerNodeId')]",
          "dashboard": "[variables('subnetDashboardId')]"
        },
        "nsg": {
          "tx": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('subnetTxNode').nsg)]",
          "miners": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('subnetMiner').nsg)]",
          "dashboard": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('subnetDashboard').nsg)]"
        }
      }
    }
  }
}